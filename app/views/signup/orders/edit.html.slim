/ - content_for :product_description
/   / find this in app/views/signup/orders/_event.html.slim
/ = render @order.product.decorate

/ ##########################################
/ event signup information
= render "signup/orders/signup_info", :event => @order.product.decorate

/ ##########################################
/ zone with name & shortdescription
/ = render "signup/products/description", product: @order.product.decorate, show_back_button: true

/ ##########################################
/ event basic details start- & end-date basic location
= render "signup/products/info_row", :event => @order.product.decorate

/ ##########################################
/ bundle details zone
= render "signup/eventbundles/subevents", :event => @order.product.decorate

/ ##########################################
/ pricing zone
= render "signup/products/price_row", :event => @order.product.decorate, :order => @order, :enable_row_select => true

.row.signup-form-zone
  .col-xs-12
    .well.signup_well
      = render 'form'
