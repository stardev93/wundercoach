.row
  .col-xs-12
    .page-header
      span.h1
        i.fa.fa-gears
        | &nbsp;
        = @accountinvoicetype
      span.add-item
        = link_to new_accountinvoicetype_path, :class=>"btn btn-default"
          i.fa.fa-plus
          | &nbsp;
          = t(:add_accountinvoicetype)
    p.lead
      = @accountinvoicetype.key
      br
      = @accountinvoicetype.name
      br
      = @accountinvoicetype.description
      br
      = @accountinvoicetype.position
      br

.row
  .col-xs-12
    p.h3
      'Accountinvoicetype
      = t(:data)
    hr style="padding:0px; margin: 5px;"
    address
      p
        strong =t(:key)
        br
        span.lead = @accountinvoicetype.key
        '&nbsp;
      p
        strong =t(:name)
        br
        span.lead = @accountinvoicetype.name
        '&nbsp;
      p
        strong =t(:description)
        br
        span.lead = @accountinvoicetype.description
        '&nbsp;
      p
        strong =t(:position)
        br
        span.lead = @accountinvoicetype.position
        '&nbsp;

.row
  .col-xs-12.text-right
    hr
    = link_to @accountinvoicetype, data: {:confirm => "#{t(:are_you_sure_you_want_to_delete_this_object)}"}, :method => :delete, :class => "btn btn-danger"
        i.fa.fa-remove
        '&nbsp;
        = t(:delete)
    ' &nbsp;
    = link_to edit_accountinvoicetype_path(@accountinvoicetype), :class => "btn btn-primary"
      i.fa.fa-edit
      '&nbsp;
      = t(:edit)
    ' &nbsp;
    = link_to accountinvoicetypes_path, :class => "btn btn-default"
      i.fa.fa-arrow-left
      '&nbsp;
      = t(:back)
