= simple_form_for(@company) do |f|
  = f.error_notification

  .form-inputs
    = f.association :account
    = f.input :name
    = f.input :name_addon
    = f.input :comments
    = f.input :zip
    = f.input :city
    = f.input :street
    = f.input :streetno
    = f.input :country
    = f.input :gender
    = f.input :firstname
    = f.input :lastname
    = f.input :tel1
    = f.input :tel2
    = f.input :fax
    = f.input :email
    = f.input :homepage
    = f.input :logo
    = f.association :companystatus
    = f.input :companynumber
    = f.input :vat_number

  .form-actions
    .row
      .col-md-12.text-right
        = f.button :magic_submit, cancel: companies_path